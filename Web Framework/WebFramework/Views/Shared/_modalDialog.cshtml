@model WebFramework.ViewModels.ModalViewModel

<!-- Modal -->
<div class="modal-dialog" role="document">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times-circle"></i></button>
            <h4 class="modal-title" id="myModalLabel">@Model.Title</h4>
        </div>

        <div class="modal-body" style="max-height: 450px; overflow-y: auto">
            @Model.Body
        </div>

        <div class="modal-footer">
            <span class="btn btn-custom-default" data-dismiss="modal">
                @Model.Cancel &nbsp; <i class="fa fa-times"></i>
            </span>&nbsp; 
            <button class="btn btn-custom-success">
                @Model.Ok &nbsp; <i class="fa fa-check"></i>
            </button>
        </div>

    </div>
</div>
